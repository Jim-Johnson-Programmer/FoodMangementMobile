<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FoodMangementMobile.Views.ProductLookup">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <StackLayout Orientation="Horizontal">
                <Label Text="Enter Upc Code" WidthRequest="100" VerticalOptions="Center"></Label>
                <Entry x:Name="UpcEntry" WidthRequest="150" HorizontalOptions="StartAndExpand"></Entry>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Button x:Name="UpcScanButton" Clicked="UpcScanButton_OnClicked" Text="Lookup UPC" HorizontalOptions="CenterAndExpand"></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>